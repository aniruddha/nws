<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Home Page</title>
    </head>
    <body>
        {{> nav }}
        {{!-- arguments are passed to helper methods by space separation --}}
        <h3> {{screamIt title}}</h3>
        <p> {{message}} </p>
        {{#if placement}}
            <p>we provide 100% placements </p>
        {{/if}}

        <h3>Courses Offered </h3>
        <ol>
            {{#each courses}}
                <li> {{this}}</li>
            {{/each}}
        </ol>

        <h3>Fees</h3>
        <ol>
            {{#each fees}}
                {{#each this}}
                    <li>{{@key}} - {{this}}</li>
                {{/each}}
            {{/each}}
        </ol>
        {{> footer}}
    </body>
</html>